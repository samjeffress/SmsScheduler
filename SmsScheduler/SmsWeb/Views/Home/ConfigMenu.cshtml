@{
    ViewBag.Title = "SMS Configuration";
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
}

@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
@Scripts.Render("~/Scripts/jquery.1.8.3.min.js")
<h2>Configuration</h2>

<style>
    .ConfigDiv {
        float: left;
        width: 45%;
        border: 1px dotted #852d5d;
        padding: 10px;
        margin: 10px;
    }

    .Details {
        padding-bottom: 5px;
        margin-bottom: 5px;
    }
</style>

<div class="row">
    <div class="ConfigDiv">
        <h4>SMS provider configuration:</h4>
        @Html.Action("EditSMSAjax", "ProviderConfig")
    </div>
    <div class="ConfigDiv">
        <h4>Email provider configuration:</h4>
        @Html.Action("EditEmailAjax", "ProviderConfig")
    </div>
    <div class="ConfigDiv" id="DefaultEmailConfigDiv">
        @Html.Action("DetailsAjax", "DefaultEmail")
    </div>
    <div class="ConfigDiv" id="CountryCodeConfigDiv">
        @Html.Action("DetailsAjax", "CountryCodeConfig")
    </div>
</div>
